{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",  //注意修改这里，起个名称，与launch.json 的preLaunchTask处对应
            "command": "/usr/bin/gcc",
            "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}